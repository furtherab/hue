package tests 
{
  import asunit.framework.TestCase;
  import library.*;

  /**
   * @author Tedde
   */
  public class ScaleTest extends TestCase
  {
  	private var instance:Hue;
    
    public function ScaleTest(testMethod:String) 
    {
      super(testMethod);
    }

    protected override function setUp():void 
    {
      this.instance = new Hue(0, 0, 0);
    }
    
    protected override function tearDown():void
    {
      this.instance = null;
    }
    
    public function testRound()
    {
    	var float:Number;
    	
    	float = Scale.round(0.21345, 2);
    	assertEquals(float, 0.21);
    	assertEquals(Scale.round(0.9999, 0), 1);
    	assertEquals(Scale.round(0.49, 0), 0);
    	assertEquals(Scale.round(0.499999999999999, 2), 0.50);
    	assertEquals(Scale.round(0.1234, 3), 0.123);
    	assertEquals(Scale.round(0.5555555, 3), 0.556);
    }
  }
}
